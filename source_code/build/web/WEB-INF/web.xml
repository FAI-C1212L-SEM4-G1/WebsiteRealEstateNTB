<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!--Filter name class-->
    <filter>
        <filter-name>FilterAuthencationLogin</filter-name>
        <filter-class>vn.javaweb.real.estate.filterservlet.FilterAuthencationLogin</filter-class>
    </filter>
    <filter>
        <filter-name>FilterAuthorizationAccount</filter-name>
        <filter-class>vn.javaweb.real.estate.filterservlet.FilterAuthorizationAccount</filter-class>
    </filter>
    <!--Filter pattern name-->
    <filter-mapping>
        <filter-name>FilterAuthencationLogin</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterAuthorizationAccount</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <!--Servlet name class-->
    <servlet>
        <servlet-name>ControllerRegionalPrice</servlet-name>
        <servlet-class>vn.javaweb.real.estate.actionservlet.adminpage.ControllerRegionalPrice</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerProfileLand</servlet-name>
        <servlet-class>vn.javaweb.real.estate.actionservlet.adminpage.ControllerProfileLand</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerAuthencationLogin</servlet-name>
        <servlet-class>vn.javaweb.real.estate.actionservlet.adminpage.ControllerAuthencationLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerAccount</servlet-name>
        <servlet-class>vn.javaweb.real.estate.actionservlet.adminpage.ControllerAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerCustomer</servlet-name>
        <servlet-class>vn.javaweb.real.estate.actionservlet.adminpage.ControllerCustomer</servlet-class>
    </servlet>
    <!--Servlet pattern name-->
    <servlet>
        <servlet-name>ControllerCustomerClient</servlet-name>
        <servlet-class>vn.javaweb.real.estate.actionservlet.clientpage.ControllerCustomerClient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerProfileLandClient</servlet-name>
        <servlet-class>vn.javaweb.real.estate.actionservlet.clientpage.ControllerProfileLandClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerRegionalPrice</servlet-name>
        <url-pattern>/ControllerRegionalPrice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerProfileLand</servlet-name>
        <url-pattern>/ControllerProfileLand</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerAuthencationLogin</servlet-name>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerAccount</servlet-name>
        <url-pattern>/ControllerAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerCustomer</servlet-name>
        <url-pattern>/ControllerCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerCustomerClient</servlet-name>
        <url-pattern>/ServletCustomerClient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerProfileLandClient</servlet-name>
        <url-pattern>/ServletProfileLandClient</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
